function checkPageCondition(array $request): bool {
    return !empty($request['page']) && count(array_filter($request, function($key) {
        return $key !== 'page';
    }, ARRAY_FILTER_USE_KEY)) === 0;
}

// Example usage
$request = [
    'page' => 'home',
    'user' => '',
    'session' => '',
    // Add other keys as necessary
];

if (checkPageCondition($request)) {
    echo "Condition met: 'page' has a value and others are blank.";
} else {
    echo "Condition not met.";
}