function checkPageCondition(array $request): bool {
    // Check if 'page' is set and not empty
    if (!isset($request['page']) || empty($request['page'])) {
        return false;
    }

    // Remove 'page' key and check if all other values are empty
    unset($request['page']);
    return count(array_filter($request)) === 0;
}

// Example usage
$request = [
    'page' => 'home',
    'user' => '',
    'session' => '',
    // Add other keys as necessary
];

if (checkPageCondition($request)) {
    echo "Condition met: 'page' has a value and others are blank.";
} else {
    echo "Condition not met.";
}