chunk_size=10
start=1
end=$chunk_size

while true; do
    grep "search_term" file_name | sed -n "${start},${end}p"
    echo "Press Enter for the next $chunk_size lines or Ctrl+C to exit."
    read
    start=$((start + chunk_size))
    end=$((end + chunk_size))
done