<script type="text/javascript">
require(['jquery'], function($) {
    $(document).ready(function() {
        console.log("jQuery is ready!");
 
        // Function to get checked values of each filter type
        function getCheckedFilters() {
            var checkedFilters = {};
 
            $('.filter-options-item').each(function() {
                var attribute = $(this).attr('attribute');
                var checkedValues = [];
 
                $(this).find('input[type="checkbox"]:checked').each(function() {
                    checkedValues.push($(this).val());
                });
 
                if (checkedValues.length > 0) {
                    checkedFilters[attribute] = checkedValues;
                }
            });
 
            return checkedFilters;
        }
 
        // Event listener for changes to any filter input
        $('.filter-options-item input[type="checkbox"]').on('change', function() {
            var checkedFilters = getCheckedFilters();
            console.log(checkedFilters); // Log the checked filters
 
            // Prepare data for AJAX call
            var data = {
                filters: checkedFilters
            };
 
            // Send AJAX request
            $.ajax({
                url: 'your/custom/url', // Replace with your actual URL
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function(response) {
                    console.log('Success:', response);
                    // Update the page with the response data
                    // For example, you might want to update product list or filter options
                },
                error: function(xhr, status, error) {
                    console.log('Error:', status, error);
                }
            });
        });
    });
});
</script>
