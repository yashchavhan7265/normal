$(document).ready(function() {
    // Function to get checked values of each filter type
    function getCheckedFilters() {
        // Initialize an empty object to hold the filter values
        var checkedFilters = {};
 
        // Loop through each filter section
        $('.filter-options-item').each(function() {
            var attribute = $(this).attr('attribute'); // Get the filter attribute
            var checkedValues = [];
 
            // Find checked checkboxes within this filter section
            $(this).find('input[type="checkbox"]:checked').each(function() {
                checkedValues.push($(this).val()); // Add the value to the checkedValues array
            });
 
            // If there are any checked values, add them to the checkedFilters object
            if (checkedValues.length > 0) {
                checkedFilters[attribute] = checkedValues;
            }
        });
 
        // Return the object with all checked filter values
        return checkedFilters;
    }
 
    // Event listener for changes to any filter input
    $('.filter-options-item input[type="checkbox"]').on('change', function() {
        var checkedFilters = getCheckedFilters();
        console.log(checkedFilters); // Output the checked filters to the console
        // You can perform additional actions with the checkedFilters object here
    });
});
has context menu
